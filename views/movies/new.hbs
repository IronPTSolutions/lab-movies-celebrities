<h1>New Movie</h1>

<form action="/movies/new" method="POST">
  <div class="form-group">
    <label for="title">Title</label>
    <input name="title" type="text" class="form-control {{#if errors.title}}is-invalid{{/if}}" id="title" placeholder="Enter title"
      value="{{ movie.title }}">
    {{#if errors.title}}
      <div class="invalid-feedback">
        {{errors.title.message}}
      </div>
    {{/if}}
  </div>

    <div class="form-group">
    <label for="genre">Genre</label>
    <input name="genre" type="text" class="form-control" id="genre" placeholder="Enter genre" value="{{ movie.genre }}">
    </div>

    <div class="form-group">
    <label for="plot">Plot</label>
    <input name="plot" type="text-area" class="form-control" id="plot" placeholder="Enter plot" value="{{ movie.plot }}">
    </div>

    <div class="form-group">
    <select name="cast" multiple>
            {{#each cast as | celebrity| }}
             <option value="{{celebrity.id}}"> {{celebrity.name}} </option>
            {{/each}}
      </select>
    </div>
 

  <button type="submit" class="btn btn-outline-primary rounded-pill">Send</button>
</form>