<h1>{{title}}</h1>
<h2>Update this movie</h2>

<form method="POST" action="/movies/{{movie._id}}/edit">

  <div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <input type="text" class="form-control" id="title" aria-describedby="Movie title" name="title"  value={{movie.title}}>  
  </div>

  <div class="mb-3">
    <label for="genre" class="form-label">Genre</label>
    <input type="text" class="form-control" id="genre" aria-describedby="Movie genre" name="genre"  value={{movie.genre}}>    
  </div>

   <div class="mb-3">
    <label for="plot" class="form-label">Plot</label>
    <textarea class="form-control" id="celebrity catch" aria-describedby="Briefly describe the plot" name="plot" >    
    {{movie.plot}}
    </textarea>
  </div>

  <div>
    <div class="row">  
      <label for="cars">Select al the star that appear:</label>
      <select name="cast" id="cast" multiple>
        {{#each celebrities as |celebrity|}}
        <option value="{{celebrity._id}}">{{celebrity.name}}</option> 
         {{/each}}
      </select>
    </div>
  </div>
  
  <button type="submit" class="btn btn-primary mb-3 m-4 tex-center">Update</button>

</form>