<div class="container">
    {{#each movie as | movie|}}
        <h2>{{movie.title}} </h2>
        <p>{{movie.genre}}</p>
        <p>{{movie.plot}}</p>
        {{#each cast as | celebrity | }}
        <p>{{movie.cast.name}}</p>
        {{/each}}
    {{/each}}
    <form action="/movies/{{movie.id}}/delete" method="POST">
    <button type="submit">Delete</button>
    </form>
    <a href="/movies">All Movies</a>
</div>